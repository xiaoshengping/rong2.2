<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="10dp">

    <ImageView
        android:id="@+id/activity_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_height2"
        android:layout_marginTop="0dp"
        android:background="@mipmap/huodongmore" />

    <TextView
        android:id="@+id/activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="25dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="玩使命“敢于挑战，超越梦想“微电影阿斯顿发送到"
        android:textColor="@color/activity_item_name"
        android:textSize="@dimen/activity_item_name"
        android:background="#ECECEC"/>

</LinearLayout>
