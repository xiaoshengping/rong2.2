<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/apply_back_shape"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吉他手"
            android:textSize="21sp"
            android:textColor="@color/home_talents_item_name"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000-8000元/月"
            android:textSize="18sp"
            android:textColor="@color/position_item_salary"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间  2014-09-10        投递数量  124"
            android:textSize="14sp"
            android:textColor="@color/home_module_name"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/apply_back_shape"
        android:padding="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称\n工作地点\n招聘人数\n工作时间\n工作时长"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/home_module_name"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州娱乐文化传播有限公司\n广州-天河\n10人\n9月30日\n1年"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/home_talents_item_name"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_back_shape"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位描述"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:textColor="#888888"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="0dp"
            android:text="(1)按照领导的要求，努力完成领导布置的工作任务。\n(2)精通业务，熟练掌握酒吧各种工具、器具的使用方法。\n(3)了解所供酒品的特想及饮用形式，掌握一定的酒品知识。"
            android:textSize="16sp"
            android:textColor="@color/home_talents_item_name"
            android:layout_below="@+id/contact_information_hear"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"
            android:textSize="16sp"
            android:textColor="@color/home_more"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_back_shape"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任职要求"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:textColor="#888888"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="0dp"
            android:text="(1)按照领导的要求，努力完成领导布置的工作任务。\n(2)精通业务，熟练掌握酒吧各种工具、器具的使用方法。\n(3)了解所供酒品的特想及饮用形式，掌握一定的酒品知识。"
            android:textSize="16sp"
            android:textColor="@color/home_talents_item_name"
            android:layout_below="@+id/contact_information_hear"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"
            android:textSize="16sp"
            android:textColor="@color/home_more"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/apply_back_shape"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话\n邮箱\n官网\n地址"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/home_module_name"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1345886456\n56898452\nwww.app.com\n广州越秀区中山四路148号"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/home_talents_item_name"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_back_shape"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信誉值\n真实性\n合作次数"
            android:textSize="16sp"
            android:textColor="#888888"
            android:lineSpacingMultiplier="1.4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100\n100\n100"
            android:layout_marginLeft="26dp"
            android:textSize="16sp"
            android:textColor="@color/home_more"
            android:lineSpacingMultiplier="1.4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100位商家评论过"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>
