<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.jeremy.Customer.view.MyScrollView
        android:id="@+id/myScrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/company_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    android:text="广州娱乐文化传播有限公司"
                    android:textColor="@color/home_talents_item_name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/company_introduce_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_information_hear"
                    android:layout_marginLeft="0dp"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:text="(1)按照领导的要求，努力完成领导布置的工作任务。\n(2)精通业务，熟练掌握酒吧各种工具、器具的使用方法。\n(3)了解所供酒品的特想及饮用形式，掌握一定的酒品知识。"
                    android:textColor="@color/home_talents_item_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/company_introduce_button_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:text="查看全部"
                    android:textColor="#9373EE"
                    android:textSize="16sp"
                    android:background="@drawable/see_all_back_shape"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/vertical_bar"
                    android:paddingBottom="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    android:text=" 联系方式"
                    android:textColor="#323232"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#00ffffff"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.4"
                        android:text="电话\n邮箱\n官网\n地址"
                        android:textColor="#323232"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/company_contact_information_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:lineSpacingMultiplier="1.4"
                        android:text="1345886456\n56898452\nwww.app.com\n广州越秀区中山四路148号"
                        android:textColor="#787878"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="10dp"
                        android:drawableLeft="@mipmap/vertical_bar"
                        android:text=" 图片介绍"
                        android:textColor="#323232"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/home_more"
                        android:textSize="16sp" />
                </LinearLayout>

                <com.jeremy.Customer.view.MyGridView
                    android:id="@+id/company_picture_production_list"
                    android:numColumns="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@android:color/transparent"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp" />

            </LinearLayout>
        </LinearLayout>
    </com.jeremy.Customer.view.MyScrollView>
</LinearLayout>
