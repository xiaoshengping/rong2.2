<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackground"
    tools:context="com.jeremy.Customer.uilt.ResumeParticularsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/tailt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/talen_back_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/resume_background_icon"
                android:scaleType="centerCrop"
                />

            <TextView

                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:layout_marginRight="23dp"
                android:gravity="center"
                android:text="点击更换背景"
                android:textSize="@dimen/textSize18"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.jeremy.Customer.view.CustomImageView

                android:id="@+id/usericon_background_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="-50dp"
                android:layout_below="@+id/talen_back_iv"/>
            <RadioGroup
                android:gravity="center"
                android:id="@+id/resume_radioGroup"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:layout_below="@+id/usericon_background_iv"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/oneself_informaction_rb"
                    android:text="个人资料"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/resume_sex_color_seletor"
                    android:background="@drawable/oneself_data_button_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/oneself_production_rb"
                    android:text="个人作品"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/resume_sex_color_seletor"
                    android:background="@drawable/oneself_data_1_button_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RadioGroup>

               <LinearLayout
                  android:visibility="gone"
                   android:orientation="vertical"
                   android:id="@+id/message_layout"
                   android:layout_below="@+id/resume_radioGroup"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">




            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/name_layout"
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/resumeZhName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓       名"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/textSize16"
                    android:layout_below="@+id/talen_back_iv"
                    android:layout_toRightOf="@+id/usericon_background_iv"/>
                     <EditText
                         android:textColorHint="@color/editTextPromptColor"
                         android:hint="请输入你的昵称"
                         android:paddingLeft="30dp"
                         android:background="#00000000"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:layout_below="@+id/name_layout"
                android:id="@+id/name_iv"
                android:src="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout

                android:id="@+id/name_sex_layout"
                android:gravity="center_vertical"
                android:layout_below="@+id/name_iv"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/resume_sex_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性       别"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/textSize16"
                    android:layout_below="@+id/talen_back_iv"
                    android:layout_toRightOf="@+id/usericon_background_iv"/>
                <RadioGroup
                    android:gravity="center_vertical"

                    android:id="@+id/sex_radio_group"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <RadioButton
                        android:id="@+id/boy_radio_button"
                        android:text="男"
                        android:gravity="center"
                        android:textSize="@dimen/textSize15"
                        android:background="@drawable/resume_sex_selector"
                        android:textColor="@color/resume_sex_color_seletor"
                        android:layout_weight="1"
                        android:button="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <RadioButton
                        android:id="@+id/girl_radio_button"
                        android:text="女"
                        android:textSize="@dimen/textSize15"
                        android:gravity="center"
                        android:background="@drawable/resume_sex_selector"
                        android:textColor="@color/resume_sex_color_seletor"
                        android:layout_weight="1"
                        android:button="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                </RadioGroup>

            </LinearLayout>
            <ImageView
                android:layout_below="@+id/name_sex_layout"
                android:id="@+id/sex_iv"
                android:src="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout

                android:id="@+id/age_layout"
                android:gravity="center_vertical"
                android:layout_below="@+id/sex_iv"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年        龄"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/textSize16"
                    android:layout_below="@+id/talen_back_iv"
                    android:layout_toRightOf="@+id/usericon_background_iv"/>
                <EditText
                    android:textColorHint="@color/editTextPromptColor"
                    android:hint="请输入你的年龄"
                    android:paddingLeft="30dp"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <ImageView
                android:layout_below="@+id/age_layout"
                android:id="@+id/age_iv"
                android:src="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout

                android:id="@+id/job_layout"
                android:gravity="center_vertical"
                android:layout_below="@+id/age_iv"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职业类别"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/textSize16"
                    android:layout_below="@+id/talen_back_iv"
                    android:layout_toRightOf="@+id/usericon_background_iv"/>
                <EditText
                    android:textColorHint="@color/editTextPromptColor"
                    android:hint="请输入职业类别"
                    android:paddingLeft="30dp"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <ImageView
                android:layout_below="@+id/job_layout"
                android:id="@+id/job_iv"
                android:src="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout

                android:id="@+id/job_name_layout"
                android:gravity="center_vertical"
                android:layout_below="@+id/job_iv"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职业名称"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/textSize16"
                    android:layout_below="@+id/talen_back_iv"
                    android:layout_toRightOf="@+id/usericon_background_iv"/>
                <EditText
                    android:textColorHint="@color/editTextPromptColor"
                    android:hint="请输入职业名称"
                    android:paddingLeft="30dp"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:layout_below="@+id/job_name_layout"
                android:id="@+id/job_name_iv"
                android:src="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout

                android:id="@+id/address_layout"
                android:gravity="center_vertical"
                android:layout_below="@+id/job_name_iv"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作地点"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/textSize16"
                    android:layout_below="@+id/talen_back_iv"
                    android:layout_toRightOf="@+id/usericon_background_iv"/>
                <EditText
                    android:textColorHint="@color/editTextPromptColor"
                    android:hint="请输入工作地点"
                    android:paddingLeft="30dp"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
               </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/tailt_layout"
            android:orientation="vertical"
            android:id="@+id/resume_fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/return_icon"
            android:layout_width="10dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/cpmpile_resume_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:text="保存"
            android:textSize="@dimen/textSize18"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </RelativeLayout>
</ScrollView>
