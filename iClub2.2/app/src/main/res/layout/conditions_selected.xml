<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recruiment_list_title"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/apply_back_shape"
    android:orientation="horizontal"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#00000000">



        <Button
            android:id="@+id/selected_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#00ffffff"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="选择城市"
            android:paddingRight="5dp"
            android:paddingLeft="0dp"
            android:textColor="@color/home_talents_item_name"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/selected_city_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/selected_city"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000" />
    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E2E2E4"
        android:rotation="10" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00000000">

        <Button
            android:id="@+id/selected_position"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="选择职位"
            android:paddingRight="5dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/home_talents_item_name"
            android:textSize="16dp" />
        <ImageButton
            android:id="@+id/selected_position_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/selected_position"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000" />
    </RelativeLayout>

</LinearLayout>
