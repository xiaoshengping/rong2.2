<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layoutBackground"
    tools:context="com.example.administrator.iclub21.util.CompanyInviteMessageActivity"
    android:visibility="visible">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/app_tailt_layout"/>
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/comment_listview"
            android:dividerHeight="1dp"
            android:divider="#dddddd"
            android:listSelector="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_layout"
        android:gravity="center"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:text="请在七天内回复"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ic_launcher"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/adopt_invite_bt"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="接受"
            android:layout_marginBottom="3dp"
            android:textColor="@color/white"
            android:background="@mipmap/invite_button_icon"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/refuse_invite_bt"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="拒绝"
            android:textColor="@color/white"
            android:background="@mipmap/invite_button_icon"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>
</LinearLayout>
