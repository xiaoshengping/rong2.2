<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
       <TextView
           android:layout_marginTop="8dp"
           android:text="name"
           android:id="@+id/resumeJobName_invite_tv"
           android:layout_marginLeft="20dp"
           android:textSize="@dimen/textSize18"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
         <TextView
             android:id="@+id/invite_status_tv"
             android:layout_marginTop="5dp"
             android:text="状态"
             android:padding="2dp"
             android:gravity="center"
             android:layout_alignParentRight="true"
             android:textSize="@dimen/textSize14"
             android:layout_width="wrap_content"
             android:layout_marginRight="30dp"
             android:layout_height="wrap_content" />
     </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:text="1000"
            android:id="@+id/invite_paly_tv"
            android:layout_marginLeft="20dp"
            android:textColor="@color/redTextColor"
            android:textSize="@dimen/textSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/resumeJobCategory_invite_tv"
            android:text="地区"
             android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textSize="@dimen/textSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:text="公司名字"
            android:id="@+id/BEcompanyName_tv"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:text="时间"
            android:id="@+id/invite_tripTime_tv"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/textSize14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <ImageView
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout

        android:id="@+id/accept_refuse_layout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/accept_button_tv"
            android:background="@mipmap/invite_button_icon"
            android:layout_toLeftOf="@+id/refuse_button_tv"
            android:gravity="center"
            android:text="接受"
            android:focusable="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_width="80dp"
            android:layout_height="33dp" />

        <Button
            android:background="@mipmap/invite_button_icon"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:id="@+id/refuse_button_tv"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="拒绝"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="33dp" />

    </RelativeLayout>
    <ImageView
        android:src="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>