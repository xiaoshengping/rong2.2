<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 退出游戏的背景图 -->
    <!--<ImageView android:id="@+id/exitGameBackground"
        android:layout_centerInParent="true"
        android:layout_height="150dp"
        android:layout_width="300dp"
        android:src="#1b052b" />-->
    <ImageView android:id="@+id/exitGameBackground"
        android:layout_centerInParent="true"
        android:layout_height="150dp"
        android:layout_width="300dp"
        android:src="#ffffff" />
   <!-- <TextView
        android:id="@+id/tv"
        android:text="提示"
        android:layout_alignLeft="@+id/exitGameBackground"
        android:layout_alignParentTop="@+id/exitGameBackground"
        android:background="#000000"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/exitGameBackground"
        />-->
       <TextView
           android:id="@+id/tailte_tv"
           android:layout_alignLeft="@+id/exitGameBackground"
           android:layout_alignParentTop="@+id/exitGameBackground"
           android:layout_marginTop="45dp"
           android:gravity="center"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/exitGameBackground"
           />

    <!-- 取消按钮 -->
    <TextView
        android:layout_alignBottom="@+id/exitGameBackground"
        android:layout_alignLeft="@+id/exitGameBackground"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/textColor9a4274"
        android:id="@+id/btn_cancel"
       android:gravity="center"
        android:layout_height="40dp"
        android:layout_width="90dp"
        android:background="@mipmap/shrew_button_icon" />


    <!-- 确认按钮 -->
    <TextView android:layout_alignBottom="@+id/exitGameBackground"
        android:id="@+id/btn_ok"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:textColor="@color/textColor9a4274"
        android:layout_alignRight="@+id/exitGameBackground"
        android:layout_height="40dp"
        android:layout_width="90dp"
        android:background="@mipmap/shrew_button_icon" />
</RelativeLayout>