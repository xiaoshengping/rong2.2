<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layoutBackground"
    tools:context="com.jeremy.Customer.uilt.NickNameActivity">
     <include layout="@layout/app_tailt_layout"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:background="@color/editTextPromptColor"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.jeremy.Customer.view.EditTextWithDel
        android:id="@+id/nickNamr_edti_text"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLength="8"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    </RelativeLayout>
    <ImageView

        android:background="@color/editTextPromptColor"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/edit_text_size"
        android:layout_marginTop="5dp"
        android:text="2/8"
        android:layout_marginLeft="320dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
