<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jeremy.Customer.view.MyScrollView
        android:id="@+id/myScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/interspace1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/personal_data_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apply_back_shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/vertical_bar"
                        android:paddingBottom="10dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="10dp"
                        android:text=" 自我介绍"
                        android:textColor="#888888"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/talents_self_introduction_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_information_hear"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="0dp"
                        android:text="本人性格乐观开朗，工作积极认真，拥有年轻人的朝气蓬勃，做事有责任心，条理性强；易与人相处，对工作充满热情，勤奋好学，敢挑重担，具有很强的团队精神和协调能力。在为人方面，我诚实善良、开朗自信，能够吃苦。"
                        android:textColor="@color/home_talents_item_name"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/self_introduction_button_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:text="查看全部"
                        android:textColor="@color/home_more"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/apply_back_shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/vertical_bar"
                        android:paddingBottom="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:text=" 工作经历"
                        android:textColor="#888888"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/talents_work_experience_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_information_hear"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="(1)按照领导的要求，努力完成领导布置的工作任务。\n(2)精通业务，熟练掌握酒吧各种工具、器具的使用方法。\n(3)了解所供酒品的特想及饮用形式，掌握一定的酒品知识。"
                        android:textColor="@color/home_talents_item_name"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/work_experience_button_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:text="查看全部"
                        android:textColor="@color/home_more"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/apply_back_shape"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/contact_information_hear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/vertical_bar"
                        android:paddingBottom="0dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:text=" 联系方式"
                        android:textColor="#888888"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/contact_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_information_hear"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingMultiplier="1.4"
                        android:padding="12dp"
                        android:text="QQ\n邮箱\n手机号码"
                        android:textColor="@color/home_talents_item_name"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_information_hear"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/contact_information"
                        android:lineSpacingMultiplier="1.4"
                        android:paddingBottom="12dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:text="*********\n****************\n***********"
                        android:textColor="@color/home_talents_item_name"
                        android:textSize="14sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/apply_back_shape"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.4"
                        android:text="信誉值\n真实性\n合作次数"
                        android:textColor="#888888"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/talents_reputation_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:lineSpacingMultiplier="1.4"
                        android:text="100\n100\n100"
                        android:textColor="@color/home_more"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/comment_button_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/right"
                        android:padding="8dp"
                        android:text="100位商家评论过"
                        android:textColor="#888888"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.jeremy.Customer.view.MyScrollView>

</LinearLayout>
