<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeremy.Customer.uilt.ContactInformationActivity">
    <include
        android:id="@+id/tailt_layout"
        layout="@layout/app_white_tailt_layout"/>
    <ImageView
        android:id="@+id/tailt_iv"
        android:layout_below="@+id/tailt_layout"
        android:src="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_below="@+id/tailt_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <ImageView
            android:layout_below="@+id/address_layout"
            android:src="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
           android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="QQ"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize14"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/resumeQq_ev"
                android:hint="QQ___"
                android:textColorHint="@color/editTextPromptColor"
                android:background="#00000000"
                android:layout_marginLeft="47dp"
                android:textSize="@dimen/textSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:src="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="Email"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize14"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/resumeEmail_et"
                android:hint="Email"
                android:textColorHint="@color/editTextPromptColor"
                android:layout_marginLeft="32dp"
                android:textSize="@dimen/textSize14"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:src="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="手机号码"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/textSize14"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/resumeMobile_et"
                android:hint="手机号码"
                android:textColorHint="@color/editTextPromptColor"
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:src="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

</RelativeLayout>
