<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="15dp"
    android:background="#00FDFBFC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="#FDFBFC"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="热门工作"
            android:textColor="@color/home_module_name"
            android:textSize="@dimen/home_module_name" />

        <TextView
            android:id="@+id/home_more3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/home_more"
            android:textSize="@dimen/home_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:background="#FDFBFC"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_position_name_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:text="酒吧singer"
                android:textColor="@color/position_item_name"
                android:textSize="@dimen/position_item_name" />

            <TextView
                android:id="@+id/item_position_salary_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000-8000元"
                android:textColor="@color/position_item_salary"
                android:textSize="@dimen/position_item_salary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_position_time_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作时间  09-02  10:00"
                android:textColor="@color/position_item_rest"
                android:textSize="@dimen/position_item_rest" />

            <TextView
                android:id="@+id/item_position_site_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点  广州"
                android:textColor="@color/position_item_rest"
                android:textSize="@dimen/position_item_rest" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:background="#FDFBFC"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_position_name_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:text="酒吧singer"
                android:textColor="@color/position_item_name"
                android:textSize="@dimen/position_item_name" />

            <TextView
                android:id="@+id/item_position_salary_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000-8000元"
                android:textColor="@color/position_item_salary"
                android:textSize="@dimen/position_item_salary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_position_time_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作时间  09-02  10:00"
                android:textColor="@color/position_item_rest"
                android:textSize="@dimen/position_item_rest" />

            <TextView
                android:id="@+id/item_position_site_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点  广州"
                android:textColor="@color/position_item_rest"
                android:textSize="@dimen/position_item_rest" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:background="#FDFBFC"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_position_name_tv3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:text="酒吧singer"
                android:textColor="@color/position_item_name"
                android:textSize="@dimen/position_item_name" />

            <TextView
                android:id="@+id/item_position_salary_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000-8000元"
                android:textColor="@color/position_item_salary"
                android:textSize="@dimen/position_item_salary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_position_time_tv3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作时间  09-02  10:00"
                android:textColor="@color/position_item_rest"
                android:textSize="@dimen/position_item_rest" />

            <TextView
                android:id="@+id/item_position_site_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点  广州"
                android:textColor="@color/position_item_rest"
                android:textSize="@dimen/position_item_rest" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
