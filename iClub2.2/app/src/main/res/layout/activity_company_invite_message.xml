<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layoutBackground"
    tools:context="com.example.administrator.iclub21.util.CompanyInviteMessageActivity"
    android:visibility="visible">
    <include
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/app_white_tailt_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ImageView
            android:src="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/comment_listview"
            android:dividerHeight="1dp"
            android:divider="#dddddd"
            android:scrollbars="none"
            android:listSelector="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

  <LinearLayout
      android:id="@+id/comment_layout"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
          android:src="@color/lineColor"
          android:layout_width="match_parent"
          android:layout_height="1dp" />
    <LinearLayout

        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="请在七天内回复"
            android:drawablePadding="15dp"

            android:textColor="@color/textColor9373ee"
            android:textSize="@dimen/textSize15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/adopt_invite_bt"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="接受"
            android:textColor="@color/textColor9373ee"
            android:background="@mipmap/invate_jshou_icon"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/refuse_invite_bt"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColor9373ee"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="拒绝"
            android:background="@mipmap/invate_jshou_icon"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
