<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jeremy.Customer.view.MyScrollView
        android:id="@+id/myScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/position_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="吉他手"
                    android:textColor="#272A31"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/work_pay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="3000-8000元/月"
                    android:textColor="#FB4E23"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/workingtime_and_applyjobcount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="发布时间  2014-09-10        投递数量  124"
                    android:textColor="#777777"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.0"
                        android:text="公司名称"
                        android:textColor="#787878"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/companyname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:lineSpacingMultiplier="1.0"
                        android:text="广州娱乐文化传播有限公司阿斯顿嘎嘎上发生地方大东方"
                        android:textColor="#272A31"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="9dp"
                        android:lineSpacingMultiplier="1.0"
                        android:text="工作地点\n招聘人数\n工作时间\n工作时长"
                        android:textColor="#787878"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/job_informantion_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:lineSpacingExtra="9dp"
                        android:lineSpacingMultiplier="1.0"
                        android:text="广州-天河\n10人\n9月30日\n1年"
                        android:textColor="#272A31"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical"
                android:visibility="visible"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    android:text=" 职位描述"
                    android:textColor="#323232"
                    android:textSize="16sp"
                    android:drawableLeft="@mipmap/vertical_bar"/>

                <TextView
                    android:id="@+id/describe_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_information_hear"
                    android:layout_marginLeft="0dp"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="(1)按照领导的要求，努力完成领导布置的工作任务。\n(2)精通业务，熟练掌握酒吧各种工具、器具的使用方法。\n(3)了解所供酒品的特想及饮用形式，掌握一定的酒品知识。"
                    android:textColor="#777777"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/describe_button_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部..."
                    android:textColor="#9373EE"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    android:text=" 任职要求"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:drawableLeft="@mipmap/vertical_bar"/>

                <TextView
                    android:id="@+id/require_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_information_hear"
                    android:layout_marginLeft="0dp"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="(1)按照领导的要求，努力完成领导布置的工作任务。\n(2)精通业务，熟练掌握酒吧各种工具、器具的使用方法。\n(3)了解所供酒品的特想及饮用形式，掌握一定的酒品知识。asdfl;kafjkaljklak;lfjafklfhnsdhfendhfnajljalfljfeflkjdljdrelkfjjdflakksdlfewfljef"
                    android:textColor="#787878"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/require_button_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部..."
                    android:textColor="#9373EE"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="9dp"
                        android:lineSpacingMultiplier="1.0"
                        android:text="电话\n邮箱\n官网"
                        android:textColor="#343434"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/contact_way_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:lineSpacingExtra="9dp"
                        android:lineSpacingMultiplier="1.0"
                        android:text="**********\n********\n***********"
                        android:textColor="#787878"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.0"
                        android:text="地址"
                        android:textColor="#343434"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:lineSpacingMultiplier="1.0"
                        android:text="*************"
                        android:textColor="#787878"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:text="信誉值\n真实性\n合作次数"
                    android:textColor="#888888"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/reputation_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:lineSpacingMultiplier="1.4"
                    android:text="100\n100\n100"
                    android:textColor="@color/home_more"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evaluate_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="100位商家评论过"
                    android:textColor="#888888"
                    android:textSize="16sp"
                    android:drawableRight="@mipmap/right"/>

            </LinearLayout>
        </LinearLayout>
    </com.jeremy.Customer.view.MyScrollView>
</LinearLayout>
