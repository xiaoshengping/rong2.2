<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- paren_layout_width-->
    <style name="paren_layout_width">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="paren_layout_width_horgrivity" parent="paren_layout_width">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="paren_layout_width_vergrivity" parent="paren_layout_width">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- paren_layout_match-->
    <style name="paren_layout_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="paren_layout_match_horgrivity" parent="paren_layout_match">

        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="paren_layout_match_vertirivity" parent="paren_layout_match">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- radiogrud-->
    <style name="radiogroy_paren_layout_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="paren_radiogrud" parent="radiogroy_paren_layout_match">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <!-- image-->
    <style name="image_paren">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <style name="image_paren1">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="textview_paren_width" parent="paren_layout_width">
        <item name="android:padding">2dp</item>
    </style>



</resources>
