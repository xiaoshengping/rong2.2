<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBECF0"
    tools:context="com.jeremy.Customer.fragment.RecruitmentFragment">

    <ImageView
        android:id="@+id/home_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/home_load_fail"
        android:background="#EAECEF"
        android:scaleType="center"/>

    <com.jeremy.Customer.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBECF0"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/advertisement_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/advertisement_height"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"></LinearLayout>

            <include
                layout="@layout/home_advertisement"></include>
            <include
                layout="@layout/home_talents"></include>
            <include
                layout="@layout/home_position"></include>

        </LinearLayout>
    </com.jeremy.Customer.view.MyScrollView>

</FrameLayout>
