<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_back_shape"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自我介绍"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:textColor="#888888"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="0dp"
            android:layout_marginLeft="12dp"
            android:text="本人性格乐观开朗，工作积极认真，拥有年轻人的朝气蓬勃，做事有责任心，条理性强；易与人相处，对工作充满热情，勤奋好学，敢挑重担，具有很强的团队精神和协调能力。在为人方面，我诚实善良、开朗自信，能够吃苦。"
            android:textSize="16sp"
            android:textColor="@color/home_talents_item_name"
            android:layout_below="@+id/contact_information_hear"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"
            android:textSize="16sp"
            android:textColor="@color/home_more"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_back_shape"
        android:orientation="vertical"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作经历"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:textColor="#888888"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="(1)按照领导的要求，努力完成领导布置的工作任务。\n(2)精通业务，熟练掌握酒吧各种工具、器具的使用方法。\n(3)了解所供酒品的特想及饮用形式，掌握一定的酒品知识。"
            android:textSize="16sp"
            android:textColor="@color/home_talents_item_name"
            android:layout_below="@+id/contact_information_hear"
            android:lineSpacingMultiplier="1.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"
            android:textSize="16sp"
            android:textColor="@color/home_more"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_back_shape"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/contact_information_hear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="0dp"
            android:textColor="#888888"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/contact_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginLeft="12dp"
            android:text="QQ\n邮箱\n手机号码"
            android:textSize="16sp"
            android:textColor="@color/home_talents_item_name"
            android:layout_below="@+id/contact_information_hear"
            android:lineSpacingMultiplier="1.4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:layout_marginLeft="10dp"
            android:text="245917542\n245917542@qq.com\n1380244004"
            android:textSize="16sp"
            android:textColor="@color/home_talents_item_name"
            android:layout_below="@+id/contact_information_hear"
            android:layout_toRightOf="@+id/contact_information"
            android:lineSpacingMultiplier="1.4"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_back_shape"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信誉值\n真实性\n合作次数"
            android:textSize="16sp"
            android:textColor="#888888"
            android:lineSpacingMultiplier="1.4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100\n100\n100"
            android:layout_marginLeft="26dp"
            android:textSize="16sp"
            android:textColor="@color/home_more"
            android:lineSpacingMultiplier="1.4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100位商家评论过"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>
