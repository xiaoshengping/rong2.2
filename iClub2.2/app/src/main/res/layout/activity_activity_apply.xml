<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.jeremy.Customer.view.MyTitleBar xmlns:app="http://schemas.android.com/apk/res/com.jeremy.Customer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:title_name_text="活动报名"></com.jeremy.Customer.view.MyTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/apply_back_shape"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.jeremy.Customer.view.MyInputBox xmlns:app="http://schemas.android.com/apk/res/com.jeremy.Customer"
                    android:id="@+id/activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input_box_edit="请填写您的名称"
                    app:input_box_text="名字"></com.jeremy.Customer.view.MyInputBox>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E9E9E9" />

                <com.jeremy.Customer.view.MyInputBox xmlns:app="http://schemas.android.com/apk/res/com.jeremy.Customer"
                    android:id="@+id/activity_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input_box_edit="请填写您的年龄"
                    app:input_box_text="年龄"></com.jeremy.Customer.view.MyInputBox>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E9E9E9" />

                <com.jeremy.Customer.view.MyInputBox xmlns:app="http://schemas.android.com/apk/res/com.jeremy.Customer"
                    android:id="@+id/activity_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input_box_edit="请填写您的性别"
                    app:input_box_text="性别"></com.jeremy.Customer.view.MyInputBox>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E9E9E9" />

                <com.jeremy.Customer.view.MyInputBox xmlns:app="http://schemas.android.com/apk/res/com.jeremy.Customer"
                    android:id="@+id/activity_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input_box_edit="请填写您的电话"
                    app:input_box_text="电话"></com.jeremy.Customer.view.MyInputBox>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E9E9E9" />

                <com.jeremy.Customer.view.MyInputBox xmlns:app="http://schemas.android.com/apk/res/com.jeremy.Customer"
                    android:id="@+id/activity_mailbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input_box_edit="请填写您的邮箱"
                    app:input_box_text="邮箱"></com.jeremy.Customer.view.MyInputBox>

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/apply_button_shape"
                android:onClick="apply_button"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
