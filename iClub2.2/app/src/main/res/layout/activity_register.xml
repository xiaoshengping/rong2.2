<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context="com.example.administrator.iclub21.util.RegisterActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/app_white_tailt_layout"/>
        <ImageView
            android:src="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@mipmap/phone_icon"
            android:drawablePadding="5dp"
            android:hint="手机号码"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="10dp"
            android:phoneNumber="true"
            android:textSize="@dimen/textSize15"
            android:textColorHint="#000000" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/captcha_edit"
                android:layout_width="160dp"
                android:layout_height="35dp"

                android:layout_marginLeft="50dp"
                android:drawablePadding="5dp"
                android:hint="验证码"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_edittext"
                android:phoneNumber="true"
                android:textSize="@dimen/textSize15"
                android:textColorHint="#000000" />
            <Button
                android:id="@+id/captcha_button"
                android:text="发送验证码"
                android:background="@drawable/rounded_button"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />


        </LinearLayout>
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/set_psw_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawablePadding="5dp"
            android:hint="设置密码"
            android:password="true"
            android:textSize="@dimen/textSize15"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="10dp"
            android:textColorHint="#000000" />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/verify_psw_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:drawablePadding="5dp"
            android:hint="重复密码"
            android:password="true"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="10dp"
            android:textSize="@dimen/textSize15"
            android:textColorHint="#000000" />

        <Button

            android:id="@+id/register_finist_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/red_button_icon"
              android:textColor="@color/white"
            android:text="完成" />

    </LinearLayout>

</RelativeLayout>
