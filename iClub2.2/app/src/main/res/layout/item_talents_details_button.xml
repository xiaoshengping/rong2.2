<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/talents_details_button_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personal_data_button_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/talents_details_button_l_shape"
            android:gravity="center"
            android:padding="6dp"
            android:text="个人资料"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/individual_works_button_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="个人作品"
            android:textColor="@color/home_talents_item_name"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
